<!-- Header Section -->
<section class="header-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img src="img/catersquad-white.png">
                <h1>Edit your meals</h1>
            </div>
        </div>
    </div>
</section>


<!-- Selection Section -->
<section class="selection-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="restaurant-id">Restaurant-id</label>
                    <input type="number" class="form-control" id="restaurant-id">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <button onclick="loadMeals()">Reload</button>
                </div>
            </div>
        </div>
        <div id="viewmeals">
            <!--
            <ul class="list-group" id="meals">
            <li>
                <div class="panel panel-default restaurant-card">
                    <div class="panel-heading">
                        <p>Heading</p>
                    </div>
                    <div class="panel-body">
                        <div class="panel-info">
                            <p>info</p>
                        </div>

                    </div>
                    <div class="panel-footer">
                        <p>footer</p>
                    </div>
                </div>
            </li>
            </ul>-->
            <div id="meals">

            </div>

            <div class="row">
                <div class="col-lg-12">
                    <button onclick="addmeal()" class="btn-xl">Add Meal</button>
                </div>
            </div>
        </div>

        <div id="addmeal" hidden>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Delicious burger" required>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="text" class="form-control" id="image" placeholder="burger.jpg" required>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="price">Price</label>
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-usd"></span></div>
                            <input type="number" class="form-control" id="price" placeholder="0" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea class="form-control" rows="3" id="description" placeholder="Description of your meal" required></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button onclick="createmeal()" class="btn-xl">Add Meal</button>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button onclick="showmeals()" class="btn-l">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Footer Section -->
<section class="footer-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p>Cater Squad &#169; 2015</p>
            </div>
        </div>
    </div>
</section>

